<div id="sharedRecipes">
    {{#each recipes}}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="our-team-main">

                    <div class="team-front">
                        <img src="https://cdn.pixabay.com/photo/2017/10/09/19/29/eat-2834549__340.jpg" />
                        <h3>{{this.meal}}</h3>
                        <p>{{this.category}}</p>
                    </div>

                    <div class="team-back">
                        <div class="back-side-info">
                            <h4>Ingredients</h4>
                            <ul>
                                {{#each ingredients}}
                                <li>{{this}}</li>
                                {{/each}}
                            </ul>
                            <a href="#">View the recepie</a>
                        </div>
                        <img class="foodImage"
                            src={{this.foodImageURL}} />
                    </div>

                </div>
            </div>
        </div>
        {{/each}}
    </div>